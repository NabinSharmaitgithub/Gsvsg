
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * /users/{userId}
     * - Anyone can read user profiles to search for users.
     * - Only the owner can create or update their own profile.
     */
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Profiles cannot be deleted
    }

    /**
     * /chats/{chatId}
     * - A user can query/list chats they are a participant in.
     * - A user can get/read a chat document if they are a participant.
     * - A user can create a chat if they are included in the participants list.
     * - A user can update a chat (e.g., last message) if they are a participant.
     */
    match /chats/{chatId} {
      // Allow reading (get and list) only if the user is a participant.
      // For list queries, this requires a `where('participants', 'array-contains', request.auth.uid)` clause.
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;

      // Allow creating a new chat only if the user is part of the new document's participants list.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      
      // Allow updating a chat (e.g., to add a last message) only if the user is a participant.
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Do not allow chats to be deleted.
      allow delete: if false;

      /**
       * /chats/{chatId}/messages/{messageId}
       * - A user can read/write messages if they are a participant of the parent chat.
       */
      match /messages/{messageId} {
        allow read, write: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
