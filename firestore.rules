
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isOwner(userId);
      allow delete: if false; // Profiles cannot be deleted
    }

    // /chats/{chatId}
    match /chats/{chatId} {
      // Allow read (get, list) and update if the user is a participant.
      // The 'list' operation is constrained by the query in the client code.
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;

      // Allow creating a new chat only if the user is part of the new document's participants list.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      // Disallow deleting chats.
      allow delete: if false;

      // /chats/{chatId}/messages/{messageId}
      match /messages/{messageId} {
        // A user can read or write messages if they are a participant of the parent chat.
        // `get` is used to access the parent chat document.
        allow read, write: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
